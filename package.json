    "micro-cors": "^0.1.1",
    "mongoose": "^6.1.5",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-chartjs-2": "^4.0.1",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "styled-components": "^5.3.3"
